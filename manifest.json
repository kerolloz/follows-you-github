{
  "manifest_version": 2,
  "name": "Follows You GitHub",
  "version": "0.4.3",
  "description": "Adds a \"follows you\" label on a GitHub follower profile or hovercard",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["https://api.github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://gist.github.com/*"],
      "js": ["follows-you.js"]
    }
  ]
}
